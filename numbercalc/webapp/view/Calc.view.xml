<mvc:View xmlns:core="sap.ui.core" controllerName="sync.d12.numbercalc.controller.Calc"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
     <content>
        <VBox>
    <Label  id="label1" text="첫번째 숫자" required="true" />
    <Input id="firstNumber" value="{/firstNumber}" width="auto" />
    <Label  id="label2" text="두번째 숫자" required="true" />
    <Input id="secondNumber" value="{/secondNumber}" width="auto"/>
    <Label  id="label3" text="연산 선택" />

    <Select id="operation" selectedKey="{/operation}" width="20%">
    <items>
        <core:Item id="addItem" key="add" text="더하기 (+)" />
        <core:Item id="subtractItem" key="subtract" text="빼기 (-)" />
        <core:Item id="multiplyIem" key="multiply" text="곱하기 (x)" />
        <core:Item id="divideItem" key="divide" text="나눗셈 (÷)"/>
    </items>
    </Select>
    
    <Button id="button1" press=".onCalculate" text="계산하기" class="sapUiSmallMarginTopBottom" />
    <Button id="button2" press=".onShowMultiplicationTable" text="구구단 보기" class="sapUiSmallMarginBottom" />
    <Label  id="result" text="결과" />
    </VBox>
    </content>
    </Page>
</mvc:View>