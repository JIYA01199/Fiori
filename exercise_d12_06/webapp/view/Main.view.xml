<mvc:View controllerName="sync.d12.exercised1206.controller.Main"
   xmlns:core="sap.ui.core"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m">
   <Page id="page" title="{i18n>title}">
      <List id="list" class="sapUiResponsiveMargin" width="auto" items="{student>/student}">
         <items>
            <ObjectListItem id="listItem" 
            title="{student>name}" 
            core:require="{Formatter: 'sync/d12/exercised1206/model/formatter'}" 
            number="{path: 'student>birthdate',
                     formatter: 'Formatter.formatDate'}" 
            icon="{= ${student>gender} === 'ë‚¨' ? 'sap-icon://male' : 'sap-icon://female' }">
               <markers>
                  <ObjectMarker type="{= Formatter.isFutureMonth(${student>birthdate})}" />
               </markers>
            </ObjectListItem>
         </items>
      </List>
   </Page>
</mvc:View>